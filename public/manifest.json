{
  "manifest_version": 2,

  "name": "Intervals Helper",
  "description": "This extension is designed to help time management in intervals.",
  "version": "1.0.0",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },  
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "icons": {
    "16": "16x16_bell.png",
    "48": "48x48_bell.png",
    "128": "128x128_bell.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-T13L2qJkpvAvLmSTcyEH5XBqMxzbNTwyc9sXDLwh5ZY='; object-src 'self'",  
  "permissions": [
    "storage",
    "alarms"
  ]
}